@model BattleshipPRJ.Models.Player

@{
    ViewData["Title"] = "Novo Jogo -";
}
<div class="page-header">
    <h1>Novo Jogo</h1>

</div>

<form method="post" asp-action="NovoJogo">

    <div>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" />
    </div>


    <div>

        <label asp-for="Missao"> Missão: </label>
        <select asp-for="Missao">

            <option value="antiaerea">Antiaérea</option>
            <option value="dtotal">Destruição Total</option>


        </select>
    </div>



    <div>

        <button type="submit" asp-action="Game" align="middle">Iniciar Jogo</button>

    </div>

</form>

